<resources xmlns:tools="http://schemas.android.com/tools">
<!--    <style name="FlatWhiteTheme" parent="Theme.MaterialComponents.Light">-->
    <style name="FlatWhiteTheme" parent="Theme.MaterialComponents.Light">

    <!-- Primary brand color -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#EEEEEE</item>
        <item name="colorAccent">#FF4081</item>

        <!-- Status bar color (API level 21+) -->
        <item name="android:statusBarColor">#EEEEEE</item>

        <!-- Navigation bar color (API level 21+) -->
        <item name="android:navigationBarColor">#FFFFFF</item>

        <!-- Text color -->
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>

        <!-- Button style -->
        <item name="android:buttonStyle">@style/FlatButton</item>
    </style>

    <style name="FlatButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#FF4081</item>
        <item name="android:background">@drawable/flat_button_background</item>
    </style>



</resources>